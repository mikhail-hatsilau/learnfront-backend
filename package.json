{
  "name": "learnfront-backend",
  "version": "1.0.0",
  "description": "Backend service for the learnfront application",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "lint": "npm run lint:src && npm run lint:tests",
    "lint:src": "tslint 'src/**/*.ts'",
    "lint:tests": "tslint 'test/**/*.ts'",
    "start:dev": "nodemon",
    "test": "NODE_ENV=test mocha -r ts-node/register test/**/*.test.ts",
    "prepush": "npm run lint && npm test"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run prepush"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikhail-hatsilau/learnfront-backend.git"
  },
  "keywords": [
    "Learn",
    "Frontend"
  ],
  "author": "Mikhail Hatsilau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mikhail-hatsilau/learnfront-backend/issues"
  },
  "homepage": "https://github.com/mikhail-hatsilau/learnfront-backend#readme",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^3.0.5",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.4",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "sinon": "^7.2.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "logform": "^2.1.0",
    "winston": "^3.1.0"
  }
